<div class="{{styles.container}}">
  <div class="{{styles.topBar}}">
    <h1><img src="{{logo}}" /></h1>
    <div id="time" class="{{styles.right}} {{styles.gameActiveOnly}}"></div>  
    <div id="score" class="{{styles.gameActiveOnly}}"></div>  
  </div>

  <div class="longform {{styles.gameInactiveOnly}} {{styles.placeholder}}">
    {{#if controller.dirty}}
      <h2>Nice work!</h2>
      <p>You found <strong>{{controller.words.length}}</strong> words and scored <strong>{{controller.score}}</strong> points.</p>
      <p>Think you can do better?</p>
      <button id="new-game" type="button">Play again!</button>
    {{else}}
      <h2>Time to play boggle!</h2>
      <p>You have 60 seconds to find as many words as you can.</p>
      <p>Type a word and press the enter key. Words can only be entered once and must be real English words!</p>
      <button id="new-game" type="button">Start playing!</button>
    {{/if}}
      
  </div>

  <div class="{{styles.gameActiveOnly}}">
    <div id="board" ></div>

    <form id="input-form" class="{{styles.inputForm}}">
      <input id="word" type="text" placeholder="Enter a word" autocorrect="off" autocapitalize="off" />
      <button id="input-submit" type="submit" disabled>
        <span class="material-icons">check</span>
      </button>
    </form>

    <div id="word-list"></div>
  </div>
</div>